<h1>お問い合わせ</h1>

<%= form_with(model: @contact, local: true) do |form| %>
  <div>
    <%= form.label :name, 'お名前' %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :email, 'メールアドレス' %>
    <%= form.email_field :email %>
  </div>

  <div>
    <%= form.label :message, 'メッセージ' %>
    <%= form.text_area :message %>
  </div>

  <div>
    <%= form.submit '送信' %>
  </div>
<% end %>