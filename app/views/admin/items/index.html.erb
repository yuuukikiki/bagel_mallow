<h1>商品一覧</h1>
<%= link_to '新規商品作成', new_admin_item_path %>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>説明</th>
      <th>価格</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.name %></td>
        <td><%= item.description %></td>
        <td><%= item.price %></td>
        <td>
          <%= link_to '詳細', admin_item_path(item) %>
          <%= link_to '編集', edit_admin_item_path(item) %>
          <%= link_to '削除', admin_item_path(item), method: :delete, data: { confirm: '本当に削除しますか？' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>