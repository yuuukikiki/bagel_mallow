<h1>お問い合わせ一覧</h1>

<table>
  <thead>
    <tr>
      <th>名前</th>
      <th>メールアドレス</th>
      <th>メッセージ</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td><%= contact.message.truncate(50) %></td>
        <td>
          <%= link_to '詳細', admin_contact_path(contact) %>
          <%= link_to '削除', admin_contact_path(contact), method: :delete, data: { confirm: '本当に削除しますか？' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
