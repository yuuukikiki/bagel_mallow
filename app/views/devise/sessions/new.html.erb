<div class="login-form-wrapper">
  <h2 class="login-title">ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "login-form" }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field email-field">
      <%= f.label :email, "メールアドレス", class: "form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-input" %>
    </div>

    <div class="field password-field">
      <%= f.label :password, "パスワード", class: "form-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-input" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field remember-me-field">
        <%= f.check_box :remember_me, class: "remember-checkbox" %>
        <%= f.label :remember_me, "ログイン状態を保持", class: "remember-label" %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "ログイン", class: "login-button" %>
    </div>
  <% end %>
</div>